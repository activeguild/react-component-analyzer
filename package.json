{
  "name": "visualize-react-component",
  "version": "1.0.31",
  "description": "Analyze the component tree of react and displays it as a diagram in the browser. You can refer to the corresponding code from the diagram.",
  "main": "cli.js",
  "scripts": {
    "build": "rimraf dist && node -r esbuild-register ./tools/build.ts",
    "watch": "rimraf dist && node -r esbuild-register ./tools/watch.ts",
    "eslint": "eslint '**/*.{js,jsx,ts,tsx}' --ignore-path .gitignore",
    "prettier": "prettier . --write",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "bin": {
    "virot": "dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/activeguild/visualize-react-component.git"
  },
  "keywords": [
    "typescript",
    "visualize",
    "react",
    "component",
    "tree",
    "diagram",
    "analyze",
    "parse"
  ],
  "author": "j1ngzoue",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/activeguild/visualize-react-component/issues"
  },
  "homepage": "https://github.com/activeguild/visualize-react-component#readme",
  "devDependencies": {
    "@types/node": "^17.0.6",
    "@types/prismjs": "^1.16.6",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "beautiful-react-diagrams": "^0.5.1",
    "esbuild": "^0.14.11",
    "esbuild-loader": "^2.18.0",
    "esbuild-plugin-prismjs": "^1.0.7",
    "esbuild-register": "^3.3.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.1.7",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@typescript-eslint/typescript-estree": "^5.9.0",
    "chalk": "^4.1.2",
    "classnames": "^2.3.1",
    "commander": "^8.3.0",
    "prismjs": "^1.25.0",
    "react-icons": "^4.3.1"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "npx eslint . --fix  --ignore-path .gitignore",
      "npx prettier --write ."
    ]
  }
}
